<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.medmanage.ui.home.home_fragment"
        android:label="@string/Home"
        tools:layout="@layout/fragment_home">
    <action
        android:id="@+id/action_home_to_medication"
        app:destination="@id/action_home_to_medication"/>

    <action
        android:id="@+id/action_home_to_foodlist"
        app:destination="@id/action_home_to_foodlist"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.medmanage.ui.schedule.ScheduleFragment"
        android:label="@string/Schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.medmanage.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
