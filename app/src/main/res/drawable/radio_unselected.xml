<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is checked -->
    <item android:drawable="@drawable/radio_selected" android:state_checked="true" />
    <!-- Default state when the button is not checked -->
    <item android:drawable="@drawable/radio_unselected" android:state_checked="false" tools:ignore="ResourceCycle" />
</selector>