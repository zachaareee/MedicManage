<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fillViewport="true"
    tools:context=".activities.SignupActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/app_name"
            android:textColor="@color/yellow"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imageView_logo"
            app:layout_constraintTop_toTopOf="@+id/imageView_logo" />

        <TextView
            android:id="@+id/textView_signupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView_appName"
            app:layout_constraintTop_toBottomOf="@+id/textView_appName" />

        <!-- User Type Selection -->
        <RadioGroup
            android:id="@+id/radioGroup_userType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_logo">

            <RadioButton
                android:id="@+id/radioButton_student"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_selected"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/student"
                android:textColor="@drawable/radio_text_color"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButton_nurse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_selected"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/nurse"
                android:textColor="@drawable/radio_text_color"
                android:textSize="18sp" />
        </RadioGroup>

        <!-- Guideline to split form -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!-- Left Column -->
        <EditText
            android:id="@+id/editText_firstName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button_white"
            android:hint="@string/first_name"
            android:inputType="textPersonName"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_userType" />

        <EditText
            android:id="@+id/editText_lastName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button_white"
            android:hint="@string/last_name"
            android:inputType="textPersonName"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_firstName" />

        <!-- Nurse Specific Field -->
        <EditText
            android:id="@+id/editText_staffNo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button_white"
            android:hint="@string/staff_no"
            android:inputType="number"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_lastName"
            tools:visibility="visible" />

        <!-- Student Specific Fields -->
        <LinearLayout
            android:id="@+id/layout_studentFields"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_staffNo"
            tools:visibility="visible">

            <EditText
                android:id="@+id/editText_studentNo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_button_white"
                android:hint="@string/studentno"
                android:inputType="number"
                android:padding="8dp" />

            <EditText
                android:id="@+id/editText_medicationReq"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_button_white"
                android:hint="@string/medicationReq"
                android:inputType="text"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/foodReq"
                android:textColor="@color/yellow"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radioGroup_foodReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_foodYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/radioButton_foodNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textColor="@color/white" />
            </RadioGroup>
        </LinearLayout>

        <!-- Right Column -->
        <EditText
            android:id="@+id/editText_username"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_button_white"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
            app:layout_constraintTop_toTopOf="@id/editText_firstName" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_button_white"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@id/editText_username" />

        <!-- Buttons -->
        <Button
            android:id="@+id/button_confirm"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/yellow"
            android:text="@string/CONFIRM"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_studentFields" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/blue"
            android:text="@string/Cancel"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/button_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
